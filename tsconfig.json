{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "types": [
      "node",
      "express"
    ]
  },
  "exclude": [
    "node_modules",
    "./build/*"
  ],
  "include": [
    "./source/**/*.ts",
    "./types/**/*.d.ts"
  ]
}